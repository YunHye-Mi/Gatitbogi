<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gatitbogi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <!--text_appearance-->
    <style name="intermediate_title_appearance"> <!--카테고리, 인기 검색어 등 중제목 외양-->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/suit_medium</item>
    </style>

    <style name="subheading_appearance"> <!--식당 이름 등 소제목 외양-->
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/suit_bold</item>
    </style>

    <style name="body_appearance1"> <!--구해요 2건에 사용된 글씨 외양-->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/suit_regular</item>
    </style>

    <style name="body_appearance2"> <!--대표메뉴 등 본문에 사용되는 글씨 외양-->
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/suit_regular</item>
    </style>

    <style name="body_appearance3"> <!--8인석, 반경 등에 사용되는 글씨 외양-->
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/suit_regular</item>
        <item name="android:textColor">#000000</item>
    </style>


</resources>
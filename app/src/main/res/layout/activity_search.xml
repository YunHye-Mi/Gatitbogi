<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <!--검색어 입력창-->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_sv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/round_rectangle"
        android:gravity="center_vertical"
        android:inputType="text"
        android:focusable="auto"
        app:searchHintIcon="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </androidx.appcompat.widget.SearchView>


    <!--검색 아이콘 이미지-->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="20dp"
        android:scrollIndicators="none"
        app:layout_constraintTop_toBottomOf="@+id/search_sv"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--인기검색어-->
            <TextView
                android:id="@+id/search_popular_tv"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="인기 검색어"
                android:textAppearance="@style/intermediate_title_appearance"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!--인기 검색어 리스트-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_popular_rv"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:isScrollContainer="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/search_popular_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/item_popular_search">
            </androidx.recyclerview.widget.RecyclerView>

            <!--최근 검색어-->
            <TextView
                android:id="@+id/search_recent_tv"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="100dp"
                android:layout_alignParentTop="true"
                android:text="최근 검색어"
                android:textAppearance="@style/intermediate_title_appearance"
                android:gravity="top"
                app:layout_constraintTop_toBottomOf="@id/search_popular_tv"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/search_recent_delete_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="4dp"
                android:text="전체삭제"
                android:textSize="12sp"
                android:textColor="#000000"
                android:fontFamily="@font/suit_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/search_recent_rv"/>

            <!--최근 검색어 리스트-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_recent_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/search_recent_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:listitem="@layout/item_recent_search" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecruitDetail_Activity">

    <ImageView
        android:id="@+id/recruit_detail_iv"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/bottom_round"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/recruit_detail_back_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:scaleType="center"
        android:src="@drawable/ic_outline_arrow_back_ios_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/recruit_detail_notification_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_notifications_none_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/recruit_detail_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="김치찌개 조지는 팟"
        android:fontFamily="@font/suit_bold"
        android:textSize="18sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/recruit_detail_iv"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/recruit_detail_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/recruit_detail_title_tv"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/recruit_detail_person_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="인원: 4인~6인"
            android:fontFamily="@font/suit_medium"
            android:textSize="16sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/recruit_detail_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="날짜: 2022-07-16"
            android:fontFamily="@font/suit_medium"
            android:textSize="16sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/recruit_detail_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간: 오후 1시 희망"
            android:fontFamily="@font/suit_medium"
            android:textSize="16sp"
            android:textColor="#000000"/>

    </LinearLayout>

    <View
        android:id="@+id/recruit_detail_line"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="14dp"
        android:background="@color/rectangle_color"
        app:layout_constraintTop_toBottomOf="@id/recruit_detail_ll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/recruit_detail_other_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="기타 문구 사항"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="@font/suit_medium"
        app:layout_constraintTop_toBottomOf="@id/recruit_detail_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!--채팅방 참여하기-->
    <TextView
        android:id="@+id/upload_recruit_btn_tv"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/rectangle_color"
        android:gravity="center_vertical|center_horizontal"
        android:text="채팅방 참여하기"
        android:textSize="16sp"
        android:fontFamily="@font/suit_medium"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>